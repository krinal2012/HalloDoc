@using Assignment.Entity.DataModels;
@using Assignment.Entity.Models;
@using static Assignment.Entity.Models.Constant;
@model PaginatedViewModel<Patient>
<div class="modal fade" id="AddPatient" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white bg-info" id="staticBackdropLabel">Patient Form</h5>
                <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form method="post" asp-action="AddPatient" asp-controller="Home" id="AssignForm" class="form-floating m-2" >
                <input type="hidden" name="requestid" id="RequestID_ModelAssignCase" />
                <div class="row">
                    <div class="mb-3 col-6 form-floating">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required>
                        <label for="FormControlInput1" class="form-label">First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6 form-floating">
                        <input type="text" asp-for="LastName" class="form-control" placeholder="last Name">
                        <label for="LastName" class="form-label">Last Name</label>
                    </div>

                    <div class="mb-3 col-lg-6 form-floating">
                        <input type="email" asp-for="Email" class="form-control" placeholder="abc@email.com"
                               aria-describedby="emailHelp" required>
                        <label for="Email" class="form-label">E-mail</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-lg-6 form-floating">
                        <input asp-for="Age" type="text" class="form-control" placeholder="Age" required>
                        <label for="Age" class="form-label">Age</label>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-lg-6 form-floating">
                        Gender : 
                        <div class="form-check form-check-inline mb-3">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Male">
                            <label class="form-check-label">
                                Male
                            </label>
                        </div>
                        <div class="form-check  form-check-inline mb-3">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Female">
                            <label class="form-check-label">
                                Female
                            </label>
                        </div>
                        <div class="form-check  form-check-inline mb-3">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Other">
                            <label class="form-check-label">
                                Other
                            </label>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-6 form-floating phone">
                        <input type="tel" asp-for="PhoneNo" class="form-control shadow-none" id="phone">
                    </div>
                    <div class="mb-3 col-lg-6 form-floating">
                        <select asp-for="Disease" class="form-select" placeholder="Disease" required>
                            <option value="">Select Disease</option>
                            @foreach (var item in Enum.GetValues(typeof(Disease)))
                            {
                                <option value="@(item)">@item.ToString()</option>
                            }
                        </select>
                        <label for="State" class="form-label">Disease</label>
                        <span asp-validation-for="Disease" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-lg-6 form-floating">
                        <input asp-for="Specialist" type="text" class="form-control" placeholder="First Name" required>
                        <label for="FormControlInput1" class="form-label">Specialist</label>
                        <span asp-validation-for="Specialist" class="text-danger"></span>
                    </div>
                    <div class=" d-flex">
                        <button type="submit" class="btn Header2 col-lg-6 me-2">Save</button>
                        <button type="button" class="btn btn-outline-info col-lg-6" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
