@{
    Layout = "_AdminDashboardLayout";
    ViewData["Title"] = "Partners";
}
@using HalloDoc.Entity.Models.ViewModel;
@model List<Partners>;

<div class="d-flex justify-content-between align-items-center container pb-1 mt-5">
    <div class="d-flex align-self-center">
        <h3><b>Partners</b></h3>
    </div>
</div>
<div class="bg-white reqform container p-3">
    <div class="d-flex justify-content-between align-items-center ">
        <div class="searchPatientRegion search m-1">
            <i class="fa fa-search"></i>
            @*<select class="form-select" id="SelectRegion" onchange="searchRegion()" name="Region" asp-items="@(new SelectList(ViewBag.AssignCase,"RegionId","Name"))">
                <option value="">All</option>
            </select>*@
        </div>
        <div>
            <a class="btn btn-outline-info" asp-controller="AdminTabs" asp-action=""> + Add Business</a>
        </div>
    </div>
    <table class="table table-responsive my-2">
        <thead>
            <tr class="table-secondary">
                <th>Profession </th>
                <th>business Name</th>
                <th> Email</th>
                <th>Fax Number</th>
                <th>Phone Number</th>
                <th>Business Contact</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody id="">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="table-text">@item.Profession</td>
                    <td class="table-text">@item.Business</td>
                    <td class="table-text">@item.Email</td>
                    <td class="table-text">@item.FaxNumber</td>
                    <td class="table-text">@item.PhoneNumber</td>
                    <td class="table-text">@item.BusinessNumber</td>
                    <td class="table-text text-center">
                        <a class="btn btn-sm btn-outline-info mx-2" data-bs-toggle="modal" id="contactprovider" data-bs-target="#Contact" data-id="@item.Email">
                            Contact
                        </a>
                        <a class="btn btn-sm  btn-outline-info" asp-action="EditProvider" asp-controller="AdminTabs" asp-route-PhysicianId="@item.notificationid">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>