@{
    Layout = "_AdminDashboardLayout";
    ViewData["Title"] = "Providers";
}
@using HalloDoc.Entity.Models.ViewModel;
@model List<PhysiciansData>;

<div class="d-flex justify-content-between align-items-center container pb-1 mt-5">
    <div class="d-flex align-self-center">
        <h3><b>Provider Information</b></h3>
   </div>
</div>
<div class="bg-white reqform container p-3">
    <div class="d-flex justify-content-between align-items-center ">
        <div class="searchPatientRegion search m-1">
            <i class="fa fa-search"></i>
            <select class="form-select" id="SelectedRegion" onchange="handleSearchClick()" name="Region" asp-items="@(new SelectList(ViewBag.AssignCase,"RegionId","Name"))">
                <option value="">All</option>
            </select>
        </div>
        <div>
            <button class="btn btn-info">Create Provider Account</button>
        </div>
    </div>
    <table class="table table-responsive my-2">
        <thead>
            <tr class="table-secondary">
                <th>Stop Notification</th>
                <th>Provider Name</th>
                <th>Role</th>
                <th>On Call Status</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="table-text px-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                        </div>
                    </td>
                    <td class="table-text" >@item.FirstName @item.LastName</td>
                    <td class="table-text" >@item.Role</td>
                    <td class="table-text">@item.IsNonDisclosureDoc</td>
                    <td class="table-text">@item.Status</td>
                   
                  
                    <td class="table-text">
                        <a class="btn btn-sm btn-outline-info mx-2">
                          Contact
                        </a>
                        <a class="btn btn-sm  btn-outline-info" >
                            Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
