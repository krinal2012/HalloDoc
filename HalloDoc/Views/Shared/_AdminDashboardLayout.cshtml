}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/css/patient.css" rel="stylesheet" />
    <link href="~/css/doc.css" rel="stylesheet" />

</head>
<body class="bg-light ">
    <header class="bg-white head ">
        <div class="d-flex"
            <i class=" col-1 fa fa-solid fa-bars text-info border rounded border-info d-block d-sm-none align-self-center m-3 p-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"></i>
            <i class="fa fa-solid fa-bars text-info border rounded border-info d-block d-sm-none align-self-center m-3 p-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"></i>
            <img src="~/Images/Fig56._Patient_site_1-removebg-preview.png"
                 class=" my-1" />

            <div class="position-absolute top-0 end-0 d-flex btn btn-sm align-items-center">
                <span class="dNone"> Welcome Admin                   
                    </span>
                <a class="h5 text-info border border-info rounded p-2 m-1 text-decoration-none dNone" asp-action="Logout" asp-controller="AdminHome">
                    Log Out
                </a>
                <a class=" text-info text-decoration-none dBlock" asp-action="Logout" asp-controller="Login">
                    <i class="fa fa-sign-out fa-2x border border-info rounded p-2 m-1"></i>
                </a>

                <i class="fa fa-moon-o fa-2x text-info border border-info rounded p-2 m-3"></i>
            </div>
        </div>
        <nav class="navbar px-5 navbar-expand-sm bg-body shadow rounded border border-top d-none d-sm-block">
            <div class="d-flex justify-content-start ">
                <!-- <a class="navbar-brand" href="#">Patient_</a> -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link px-2 text-dark  @(path.StartsWith ("/Admin/") ? "activeNav" : "")" aria-current="page" asp-action="Index" asp-controller="Admin">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Provider Location</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-dark @(path.EndsWith ("/AdminTabs/AdminProfile") ? "activeNav" : "")" asp-action="AdminProfile" asp-controller="AdminTabs">My Profile</a>
                        </li>
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown px-2 text-dark @(path.StartsWith ("/AdminTabs/Provider") ? "activeNav" : "")" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                 Providers
                            </a>
                            <div class="dropdown-menu mt-2" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item NavDropdown" asp-action="ProviderMenu" asp-controller="AdminTabs">Provider</a>
                                <a class="dropdown-item NavDropdown" href="#">Scheduling</a>
                                <a class="dropdown-item NavDropdown" href="#"> Invoicing</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-2 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" >Partners</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link dropdown px-2 text-dark @(path.StartsWith("/AdminTabs/AccountAccess") ? "activeNav" : "")" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Access
                            </a>
                            <div class="dropdown-menu mt-2" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item NavDropdown" asp-action="AccountAccess" asp-controller="AdminTabs">Account Access</a>
                                <a class="dropdown-item NavDropdown" asp-action="UserAccess" asp-controller="AdminTabs">User Access</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Records</a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="offcanvas offcanvas-start w-50 dBlock" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header bg-info text-white">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item h6"><a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-dark">Dashboard</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
            </ul>
        </div>
    </div>

    <main role="main" class="container-fluid pb-3">     
        @RenderBody()
    </main>


    <footer class="child fixed-bottom p-3 foot text-center">
    </footer>
    <script>

        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/patient.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
  
</body>
</html>

