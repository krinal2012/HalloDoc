
@{
    string path = Context.Request.Path;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins" rel="stylesheet">
    <link rel="stylesheet" href="~/HellodocMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="~/css/patient.css" rel="stylesheet" />
    <link href="~/css/doc.css" rel="stylesheet" />

</head>
<body class="bg-light ">
    <header class="bg-white head ">
        <div class="d-flex"
            <i class=" col-1 fa fa-solid fa-bars text-info border rounded border-info d-block d-sm-none align-self-center m-3 p-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"></i>
            <i class="fa fa-solid fa-bars text-info border rounded border-info d-block d-sm-none align-self-center m-3 p-2" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample"></i>
            <img src="~/Images/Fig56._Patient_site_1-removebg-preview.png"
                 class=" my-1" />

            <div class="position-absolute top-0 end-0 d-flex btn btn-sm align-items-center">
                <span class="dNone"> Welcome 
                    @*@sessionCV.UserName() *@

                    </span>
                <a class="h5 text-info border border-info rounded p-2 m-1 text-decoration-none dNone" asp-action="Logout" asp-controller="Login">
                    Log Out
                </a>
                <a class=" text-info text-decoration-none dBlock" asp-action="Logout" asp-controller="Login">
                    <i class="fa fa-sign-out fa-2x border border-info rounded p-2 m-1"></i>
                </a>

                <i class="fa fa-moon-o fa-2x text-info border border-info rounded p-2 m-3"></i>
            </div>
        </div>
        <nav class="navbar px-5 navbar-expand-sm bg-body shadow rounded border border-top d-none d-sm-block">
            <div class="d-flex justify-content-start ">
                <!-- <a class="navbar-brand" href="#">Patient_</a> -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark  @(path.StartsWith("/Admin") ? "activeNav" : "")" aria-current="page" asp-action="Index" asp-controller="Admin">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Provider Location</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">My Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Providers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Partners</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Access</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3 text-dark @(path.StartsWith("/PatientProfile/PatientProfile") ? "activeNav" : "")" asp-action="PatientProfile" asp-controller="PatientProfile">Records</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="offcanvas offcanvas-start w-50 dBlock" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header bg-info text-white">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">Welcome</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item h6"><a asp-controller="Admin" asp-action="Index" class="text-decoration-none text-dark">Dashboard</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
                <li class="list-group-item h6"><a asp-controller="PatientProfile" asp-action="PatientProfile" class="text-decoration-none text-dark">Profile</a></li>
            </ul>
        </div>
    </div>

    <main role="main" class="container-fluid my-5 pb-3">
        <div class="row mb-5">
            <button class="col-lg col-3 btn btn-p m-2 py-3 rounded text-start">
                <i class="fa fa-solid fa-circle-plus me-2" aria-hidden="true"></i><b>New</b>
                <p class="h4">1456</p>
            </button>
            <button class="col-lg col-3 btn btn-outline-info btn-i m-2 py-3 -5 rounded text-start">
                <i class="fa fa-user-md me-2" aria-hidden="true"></i><b>Pending</b>
                <p class="h4">1456</p>
            </button>
            <div class=" col-lg col-3 btn btn-outline-success m-2 py-3  rounded text-start">
                <i class="fa fa-check-square-o me-2" aria-hidden="true"></i><b>Active</b>
                <p class="h4">1456</p>
            </div>
            <div class="col-lg col-3 btn btn-b  py-3 m-2 rounded text-start">
                <i class="fa-solid fa-clock-rotate-left me-2" aria-hidden="true"></i>
                <b>Conclude </b>
                <p class="h4">1456</p>
            </div>
            <div class="col-lg col-3 btn btn-c m-2 py-3  rounded text-start">
                <i class="fa-solid fa-user-xmark me-2" aria-hidden="true"></i><b>To close </b>
                <p class="h4">1456</p>
            </div>
            <div class=" col-lg col-3 btn btn-u m-2 py-3  rounded text-start">
                <i class="fa-solid fa-circle-dollar-to-slot me-2" aria-hidden="true"></i><b>Unpaid </b>
                <p class="h4">1456</p>
            </div>
        </div>
        <div class=" d-flex justify-content-between m-2 searchBar">
            <h4><b>Patients(New) </b></h4>
            <div>
                <button type="button" class="btn btn-info">
                    <i class="fa fa-send"></i>
                    <span class="dNone">Send Link</span>
                </button>
                <button type="button" class="btn btn-info">
                    <i class="fa fa-file-pen"></i>
                    <span class="dNone">Create Request</span>
                </button>
                <button type="button" class="btn btn-info">
                    <i class="fa-solid fa-share"></i>
                    <span class="dNone"> Export</span>
                </button>
                <button type="button" class="btn btn-info">
                    <i class="fa-solid fa-share-from-square"></i>
                    <span class="dNone">Export All</span>
                </button>
                <button type="button" class="btn btn-info">
                    <i class="fa-solid fa-user-nurse"></i>
                    <span class="dNone">Request DIY Support</span>
                </button>
            </div>
        </div>
        <div class="  align-items-center m-2 bg-white p-2">
            <div class="mt-2 mx-2 bg-white">
                <div class="searchBar px-2">
                    <div class="searchPatientRegion py-2">
                        <div class="search m-1">
                            <i class="fa fa-search bg-white"></i>
                            <input type="text" class="form-control" placeholder="Search Patients">
                        </div>
                        <div class="search m-1">
                            <i class="fa fa-search"></i>
                            <select class="form-select shadow-none" id="floatingSelectGrid">
                                <option selected class="text-secondary">All Regions</option>
                                <option value="1">Maryland</option>
                                <option value="2">New York</option>
                                <option value="3">Virginia</option>
                            </select>
                        </div>
                    </div>                 
              
                    <div class="text-secondary requestType">
                        <div class="me-2">
                            <i class="fa fa-circle" aria-hidden="true"></i> All
                        </div>
                        <div class="me-2">
                            <i class="fa fa-circle text-success" aria-hidden="true"></i> Patient
                        </div>
                        <div class="me-2">
                            <i class="fa fa-circle text-warning" aria-hidden="true"></i> Family/Friend
                        </div>
                        <div class="me-2">
                            <i class="fa fa-circle text-primary" aria-hidden="true"></i> Business
                        </div>
                        <div class="me-2">
                            <i class="fa fa-circle text-danger" aria-hidden="true"></i> Concierge
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()
    </main>


    <footer class="child fixed-bottom p-3 foot text-center">
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/patient.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

