@model Hallodoc.Entity.Models.ViewModel.viewPatientReq
@{
    ViewData["Title"] = "Reset Password";
}
<div class="container text-center maindiv bg-img">
    @*<div class="col-lg-8 col-md-8 col-sm-3 col-5">
        <a asp-action="Login" asp-controller="Home"><i class="fa fa-angle-left fa-lg p-3 text-info"> Back</i> </a>
    </div>*@
    <div class="d-flex text-center justify-content-center align-items-center">
        <div class="col-lg-5 col-md-8 col-sm-12 text-center ">
            <h2 class="mb-2 text-body-secondary">Reset Your Password</h2>
            @TempData["emailCheck"]
            <form method="post" asp-action="SavePassword" asp-controller="Home">
                <input type="hidden" asp-for="Email" value="@TempData["email"]"/>
                <div class="form-floating mb-3 ">
                    <input type="text" asp-for="Pass" class="form-control shadow-none" placeholder="Password">
                    <label for="password" id="Password">Password</label>
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 ">
                    <input type="password" asp-for="ConformPass" class="form-control shadow-none" placeholder="Conform Password">
                    <label for="Conform Password" id="ConformPassword">Conform Password</label>
                    <span asp-validation-for="ConformPass" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-info text-light form-control mb-3" value="Reset Password " />
            </form>
        </div>
    </div>
</div>