@model Hallodoc.Entity.Models.ViewModel.viewConciergeReq
@{
    ViewData["Title"] = "Request as a concierge";
}

<div class=" border border-info rounded p-1 m-3 btn btn-sm backBtn">
    <a asp-action="Index" asp-controller="PatientForm"><i class="fa fa-angle-left p-2 fa-sm text-info"> Back</i> </a>
</div>
<form  method="post" class="container bg-white my-5 reqform">
    <h4 class="py-3">Concierge Information</h4>
    <div class="row">

        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for ="First_name" type="text" class="form-control" placeholder="First Name">
            <label for="FormControlInput1" class="form-label">Your First Name</label>
            <span asp-validation-for="First_name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for ="Last_name" type="text" class="form-control" placeholder="last Name">
            <label for="FormControlInput2" class="form-label">Your Last Name</label>
        </div>
        <div class="mb-3 col-lg-6 form-floating phone">
            <input asp-for="Mobileno" type="tel" class="form-control shadow-none" id="phone">
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="Emailid" type="email" class="form-control" placeholder="abc@email.com"
                   aria-describedby="emailHelp">
            <label for="fEmail" class="form-label">Your E-mail</label>
            <span asp-validation-for="Emailid" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="Hotelname" type="text" class="form-control" placeholder="Property">
            <label for="Property" class="form-label">Hotel/Property Name</label>
        </div>
    </div>
    <h4 class="py-3">Concierge Location</h4>
    <div class="row">
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="Street" type="text" class="form-control" placeholder="Street">
            <label for="Street" class="form-label">Street</label>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="City" type="text" class="form-control" placeholder="City">
            <label for="City" class="form-label">City</label>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="State" type="text" class="form-control" placeholder="State">
            <label for="State" class="form-label">State</label>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="ZipCode" type="text" class="form-control" placeholder="Zip-code">
            <label for="Zip-code" class="form-label">Zip-code</label>
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>
    </div>

    <h4 class="py-3">Patient Information</h4>
    <div class="row">
        <div class="form-group col-lg-12 mb-3">
            <textarea asp-for ="Symptoms" class="form-control"  rows="4"
                      placeholder="Enter Brief Detailes Of Symptoms(option)"></textarea>
            <span asp-validation-for="Symptoms" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
            <label for="Firstname" class="form-label">First Name</label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="LastName" type="text" class="form-control" placeholder="last Name">
            <label for="Lastname" class="form-label">Last Name</label>
        </div>
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="DOB" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")">
            <label class="form-label" for="Date">Date of Birth</label>
        </div>
    </div>
    <h4 class="py-3">Patient Contact Information</h4>
    <div class="row">
        <div class="mb-3 col-lg-6 form-floating">
            <input asp-for="Email" type="email" class="form-control"  placeholder="abc@email.com"
                   aria-describedby="emailHelp">
            <label for="email" class="form-label">E-mail</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-6 form-floating phone">
            <input asp-for="Mobile" type="tel" class="form-control shadow-none" id="phone1">
        </div>
    </div>
    <h4 class="py-3">Patient Location</h4>
    <div class="mb-3 col-lg-6 form-floating">
        <input asp-for="Room" type="text" class="form-control" placeholder="Room">
        <label for="Room" class="form-label">Room #/Suite (optional)</label>
    </div>    

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-info text-light m-2">Submit</button>
        <button type="reset" class="btn btn-outline-info m-2">Cancel</button>
    </div>
</form>
<script src="~/js/patient.js"></script>

